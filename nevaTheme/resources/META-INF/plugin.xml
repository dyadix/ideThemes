<idea-plugin>
  <id>net.dyadix.themes.neva</id>
  <name>Neva Theme Pack</name>
  <version>2.1</version>
  <vendor email="dyadix@gmail.com" url="http://www.dyadix.net">dyadix</vendor>

  <description><![CDATA[
      Two dark themes (nevaTheme/Darker) with a blue background and light text and one light theme (nevaTheme Ice).
    ]]></description>

  <change-notes><![CDATA[
      New light “nevaTheme Ice” added.
    ]]>
  </change-notes>

  <idea-version since-build="201.0"/>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <themeProvider id="net.dyadix.neva.theme" path="/nevaTheme.theme.json"/>
    <themeProvider id="net.dyadix.neva.theme.darker" path="/nevaThemeDarker.theme.json"/>
    <themeProvider id="net.dyadix.neva.theme.ice" path="/nevaThemeIce.theme.json"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>